---
import Card from "@components/Card.astro";
import FeaturedCard from "./FeaturedCard.astro";
import type { MarkdownInstance } from "astro";

export interface Work {
	title: string;
	pubDate: string;
	description: string;
	tags: string[];
	thumbnail?: string;
};

interface Props {
	selected_card?: string,
	blogs_override?: MarkdownInstance<Record<string, any>>[],
}

const { selected_card, blogs_override } = Astro.props;

const works = blogs_override ?? (
		await Astro.glob("../pages/blog/*.md")
	)
	.filter((w) => {
		// exclude files starting with "_"
		return !w.file.substring(w.file.lastIndexOf("/") + 1).startsWith("_")
	});

const thumbnails = import.meta.glob<{ default: ImageMetadata }>("/src/assets/blogs/*.png", { eager: true });
works.forEach((work) => {
	if(work.frontmatter.thumbnail == null) return;
	const thumbnailPath = `/src/assets/blogs/${work.frontmatter.thumbnail}`;
	if(!thumbnails[thumbnailPath]) {
		throw new Error(`Thumbnail ${thumbnailPath} not found`);
	}
});
const commonWorks = works.filter((work) => !work.frontmatter.featured);
const featuredWorks = works.filter((work) => work.frontmatter.featured);
---

<div class="flex flex-col gap-4">
	<div class="flex flex-wrap gap-2 justify-center">
		{featuredWorks.map(
			(work) => {
				const work_card = (
					<FeaturedCard
						title={work.frontmatter.title}
						thumbnail={
							work.frontmatter.thumbnail != null ?
							thumbnails[`/src/assets/blogs/${work.frontmatter.thumbnail}`].default : null
						}
						description={work.frontmatter.description}
						tags={work.frontmatter.tags}
						always_selected={work.frontmatter.title === selected_card}
					/>
				);
				if(work.frontmatter.title === selected_card) {
					return (
						<div>
							{work_card}
						</div>
					);
				}else {
					return (
						<a class="block" href={work.url}>
							{work_card}
						</a>
					);
				}
			}
		)}
	</div>
	<div class="flex flex-wrap gap-2 justify-center">
		{commonWorks.map(
			(work) => {
				const work_card = (
					<Card
						title={work.frontmatter.title}
						thumbnail={
							work.frontmatter.thumbnail != null ?
							thumbnails[`/src/assets/works/${work.frontmatter.thumbnail}`].default : null
						}
						description={work.frontmatter.description}
						tags={work.frontmatter.tags}
						always_selected={work.frontmatter.title === selected_card}
					/>
				);
				if(work.frontmatter.title === selected_card) {
					return (
						<div>
							{work_card}
						</div>
					);
				}else {
					return (
						<a class="block" href={work.url}>
							{work_card}
						</a>
					);
				}
			}
		)}
	</div>
</div>