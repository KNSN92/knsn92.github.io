---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  image: ImageMetadata;
  url: string;
  name: string;
}

const { image, url, name } = Astro.props;
---

<a href={url} class="block h-full aspect-square hover:scale-110">
  <Image
    src={image}
    alt={name}
    loading="eager"
    class="h-full w-fit text-white"
  />
</a>
