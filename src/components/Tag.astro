---
interface Props {
  tag: string;
  link?: boolean;
}
const { tag, link } = Astro.props;
---
{
  link ? (
    <a href={`/tag/${tag.replace("/", "-")}`} class="underline whitespace-nowrap hover:text-blue-400">
      #{tag}
    </a>
  ) : (
    <span class="underline whitespace-nowrap">#{tag}</span>
  )
}