---
import BaseLayout from "@layouts/BaseLayout.astro";
import MyIcon from "@assets/myicon.png";
import { Image } from "astro:assets";
---
<BaseLayout pageTitle="404">
	<div class="w-full h-full flex flex-col items-center justify-center">
		<Image src={MyIcon} alt="my icon" class="w-[80vw] md:w-[20vw] rounded-full animate-spin mb-4" />
		<h1 class="text-6xl font-bold">
			404
		</h1>
		<p id="there-is-nothing-here" class="text-xl">ここには何も無いようだ</p>
	</div>
</BaseLayout>

<script>
	const there_is_nothing_here = document.getElementById("there-is-nothing-here")!;
	let c = 0;
	setInterval(() => {
		c = (c + 1) % 4;
		there_is_nothing_here.innerText = "ここには何も無いようだ" + ".".repeat(c);
	}, 500);
</script>